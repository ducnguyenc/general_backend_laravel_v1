{
    "preset": "laravel",
    "rules": {
        "class_attributes_separation": {
            "elements": {
                "property": "none"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "not_operator_with_successor_space": false
    },
    "exclude": [
        "config"
    ],
    "notPath": [
        "app/Console/Kernel.php",
        "app/Http/Middleware/Authenticate",
        "tests/CreatesApplication.php",
        "public/index.php",
        "app/Console/Commands/RepositoryInterfaceMakeCommand.php",
        "app/Console/Commands/RepositoryMakeCommand.php",
        "app/Console/Commands/ServiceInterfaceMakeCommand.php",
        "app/Console/Commands/ServiceMakeCommand.php"
    ]
}
